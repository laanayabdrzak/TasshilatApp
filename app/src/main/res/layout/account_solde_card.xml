<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_account_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/account_title_padding"
                android:paddingRight="@dimen/account_title_padding"
                android:paddingTop="@dimen/account_title_padding"
                android:textColor="@color/account_title"
                android:textSize="@dimen/account_title" />

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/account_title_padding"
                android:paddingRight="@dimen/account_title_padding"
                android:textSize="@dimen/songs_count" />

            <TextView
                android:id="@+id/solde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/count"
                android:paddingBottom="@dimen/songs_count_padding_bottom"
                android:paddingLeft="@dimen/account_title_padding"
                android:paddingRight="@dimen/account_title_padding"
                android:textSize="@dimen/solde_account" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_account_overflow_width"
                android:layout_height="@dimen/ic_account_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/thumbnail"
                android:layout_marginTop="@dimen/ic_account_overflow_margin_top"
                android:layout_marginRight="@dimen/ic_account_overflow_margin_right"
                android:scaleType="centerCrop"
                android:visibility="visible" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>